<div class="row">

    <div class="col s12">
        {{#if error}}
        <p class="error">{{error}}</p>
        {{/if}}
        <h1 style="text-align:center;">Забыли пароль?</h1>
        <form action="/auth/reset" method="POST">
            <div class="input-field">
                <input placeholder="Email" name="email" id="email" type="email" class="validate" required>
                <label for="email">Email</label>
                <span class="helper-text" data-error="Введите email"></span>
            </div>
            <input type="hidden" name="_csrf" value={{csrf}}>
            <button class="btn btn-primary" type="submit">Сбросить</button>
        </form>
    </div>
</div>