<h1>добавить курс</h1>
{{#if error}}
<p class="error">{{error}}</p>
{{/if}}
<form action="/add" method="POST">
    <div class="input-field col s6">
        <input value="{{data.title}}" placeholder="Название" name="title" id="title" type="text" class="validate"
            required>
        <label for="title">Название курса</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field col s6">
        <input value="{{data.price}}" placeholder="Цена" name="price" id="price" type="number" class="validate" required
            min="1">
        <label for="price">Цена курса</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field col s6">
        <input value="{{data.url}}" placeholder="URL" name="img" id="img" type="text" class="validate" required>
        <label for="img">URL картинки</label>
        <span class="helper-text" data-error="Введите url"></span>
    </div>
    <input type="hidden" name="_csrf" value={{csrf}}>
    <button class="btn btn-primary">Добавить курс</button>
</form>