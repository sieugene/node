<h1>Корзина</h1>
<div id="cart">
    {{#if courses.length}}
    <table>
        <thead>
            <tr>
                <th>
                    Название
                </th>
                <th>
                    Количество
                </th>
                <th>
                    Действия
                </th>
            </tr>
        <tbody>
            {{#each courses}}
            <tr>
                <td>{{title}}</td>
                <td>{{count}}</td>
                <td>
                    <button class="btn btn-small js-remove" data-csrf="{{@root.csrf}}" data-id="{{id}}">
                        Удалить
                    </button>
                </td>
            </tr>
            {{/each}}
        </tbody>
        </thead>
    </table>
    <p><strong>
            Цена:
        </strong> <span class="price">{{price}}</span></p>


    <form action="/orders" method="post">
        <input type="hidden" name="_csrf" value={{csrf}}>
        <button type="submit" class="btn">Сделать заказа</button>
    </form>
    {{else}}
    <p>Корзина пуста</p>
    {{/if}}
</div>